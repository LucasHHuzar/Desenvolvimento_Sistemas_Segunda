    function subtracao($n1 = 10, $n2 = 5){
        $sub = $n1 - $n2;
        echo "<br>{$n1} - {$n2} = {$sub}<br><br>";
    }

    subtracao();
    subtracao(20);
    subtracao(3, 4);

    function divisao(float $n1, float $n2):float{
        echo var_dump($n1);
        echo var_dump($n2); 

        $divs = ($n1 / $n2);

        return ($n1 / $n2);
    }
    
    echo var_dump(1);
    echo var_dump(2);
    divisao(1, 2);

    $conta = divisao(10, 5);
    echo "<br>Conta: " . $conta;

